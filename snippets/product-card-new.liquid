<product-card-new class="product-card" data-handle="{{ product.handle }}">
  <div>
    {% for image in product.images limit: 1 %}
      <div class="featured_img">
        {% assign prod_media = product.media %}
        {{ prod_media[0] | img_tag }}
      </div>
    {% endfor %}
  </div>
  <div>
    <h2>{{ product.title }}</h2>
    <p>
      <span>{{ product.price }}</span>
      <span>
        <s>{{ product.compare_at_price_max }}</s>
      </span>
    </p>
  </div>
  <div>
    {% unless product.has_only_default_variant %}
    {% for option in product.options_with_values %}
      <label>{{option.name}}</label>
      {{for value in option.values}}
        {{value}}
      {{% endfor %}}
    {% endfor %}
  </div>
  <div>
    {%- if product.metafields.Color -%}
          <p><b>Color (default): </b> {{ product.metafields.Color }} <div style="display: inline-block; background-color:{{ product.metafields.Color }};width:10px;">&nbsp;</div></p>
          <p><b>Color (red): </b> {{ product.metafields.Color.value.red }}</p>
          <p><b>Color (blue): </b> {{ product.metafields.Color.value.blue }}</p>
          <p><b>Color (green): </b> {{ product.metafields.Color.value.green }}</p>
          {%- endif -%}
  </div>
  <div>
    <button class="btn--custom">Add To Cart</button>
  </div>
</product-card-new>