<div>{{section.settings.brattery_message}}</div>
<h1>{{ section.settings.show_announcement }}</h1>
<h1>{{ section.settings.font_size }}</h1>
<h1>{{ section.settings.article }}</h1>
<button style=" background-color: {{section.settings.button_color}}; color: {{section.settings.button_texts}}">{{ section.settings.button_text }}</button>
<div>{{ section.settings.article }}</div>
<h3 style="color: {{section.settings.page_background}}">Hello Welcome To Shopify</h3>
<div>{{section.settings.product_list}}</div>

{% schema %}
  {
    "name": "text-box",
    "tag": "section",
    "class": "text-section",
    "limit": 1,
    "settings": [
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Show announcement",
        "default": true
      },
      {
        "type": "number",
        "id": "products_per_page",
        "label": "Products per page",
        "default": 20
      },
      {
        "type": "range",
        "id": "font_size",
        "min": 10,
        "max": 25,
        "step": 1,
        "unit": "px",
        "label": "Font size",
        "default": 16
      },
      {
        "type": "select",
        "id": "vertical_alignment",
        "label": "Vertical alignment",
        "options": [
          {
            "value": "top",
            "label": "Top"
          }, {
            "value": "middle",
            "label": "Middle"
          }, {
            "value": "bottom",
            "label": "Bottom"
          }
        ],
        "default": "top"
      }, {
        "type": "textarea",
        "id": "home_welcome_message",
        "label": "Welcome message",
        "default": "Welcome to my shop!"
      }, {
        "type": "article",
        "id": "article",
        "label": "Article"
      }, {
        "type": "text",
        "id": "button_text",
        "label": "button_text",
        "default": "Click Me"
      }, {
        "type": "color",
        "id": "button_color",
        "label": "button_color",
        "default": "#000"
      }, {
        "type": "color",
        "id": "button_texts",
        "label": "button_texts",
        "default": "#fff"
      }, {
        "type": "range",
        "id": "font_size_text",
        "min": 12,
        "max": 35,
        "step": 1,
        "unit": "px",
        "label": "Font size",
        "default": 12
      }, {
        "type": "color_background",
        "id": "page_background",
        "label": "Page Background",
        "default": "linear-gradient(#ffffff, #000000)"
      },
      {
  "type": "liquid",
  "id": "brattery_message",
  "label": "Battery message",
  "default": "{% if product.tags contains 'battery' %}This product can only be shipped by ground.{% else %}This product can be shipped by ground or air.{% endif %}"
},
{
  "type": "liquid",
  "id": "message",
  "label": "Message",
  "default": "Hello {{ not_a_real_tag }}, welcome to our shop."
},
{
  "type": "product_list",
  "id": "product_list",
  "label": "Products",
  "limit": 12
}

      

    ],
    "presets": [
      {
        "name": "text-box"
      }
    ]
  }
{% endschema %}